{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "baseUrl": "src",
    "allowJs": true,
    "paths": {
      "@/*": ["*"],
      "@router": ["router/index.ts"],
      "@lib/*": ["lib/*"],
      "@repository/*": ["repository/*"],
      "@config/*": ["config/*"],
      "@middlewares/*": ["middlewares/*"],
      "@dtos": ["dtos/index.ts"]
    },
    "types": ["node", "express"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "exclude": ["node_modules/", "dist"],
  "include": ["src/**/*"]
}
